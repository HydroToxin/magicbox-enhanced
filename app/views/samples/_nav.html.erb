<h1>
	Statistics
	<div class="float-end">
		<div class="btn-group">
		  <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
		    <i class="bi-calendar me-4"></i>
		  </button>
		  <div class="dropdown-menu dropdown-menu-end">
		    <%= link_to "Today", build_samples_path(action_name, :today), class: "dropdown-item #{@date_filter == "today" ? 'active' : '' }" %>
		    <div class="dropdown-divider"></div>
		    <%= link_to "Last week", build_samples_path(action_name, :last_week), class: "dropdown-item #{@date_filter == "last_week" ? 'active' : '' }" %>
		    <%= link_to "Last month", build_samples_path(action_name, :last_month), class: "dropdown-item #{@date_filter == "last_month" ? 'active' : '' }" %>
		    <%= link_to "Last year", build_samples_path(action_name, :last_year), class: "dropdown-item #{@date_filter == "last_year" ? 'active' : '' }" %>
		    <div class="dropdown-divider"></div>
		    <%= link_to "All time", build_samples_path(action_name, :all_time), class: "dropdown-item #{@date_filter == "all_time" ? 'active' : '' }" %>
		  </div>
		</div>
	</div>
</h1>

<hr>

<nav class="nav">
  <%= link_to "Rooms", rooms_samples_path(date_filter: @date_filter), class: "nav-link" %>
  <%= link_to "Harvest", harvest_samples_path(date_filter: @date_filter), class: "nav-link" %>
  <%= link_to "System", general_samples_path(date_filter: @date_filter), class: "nav-link active" %>
</nav>

