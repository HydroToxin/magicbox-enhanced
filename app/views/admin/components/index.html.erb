<h1>
  Components
  <div class="float-end">
    <%= link_to new_admin_component_path, class: "btn btn-info d-flex align-items-center" do %>
      <i class="bi-plus my-1 h5" width= "1em" height="1em"></i>
      New
    <% end %>
  </div>
</h1>

<br>

<table class="table table-sm">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Type</th>
      <th>Main Platform</th>
      <th>Multiplexer</th>
      <th>Address</th>
      <th>Voltage</th>
      <th>Power</th>
      <th>Temperature</th>
      <th>Active</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @components.each do |component| %>
      <tr>
        <td class="text-cente">
          <% if component.image.present? %>
            <%= image_tag component.image, id: 'image', style: "height: 32px", class: "m-1" %>
          <% else %>
          &nbsp
          <% end %>
        </td>
        <td class="align-middle text-start"><%= component.name %></td>
        <td class="align-middle text-start"><%= component.component_type %></td>
        <td class="align-middle text-start"><%= component.microcontroller %></td>
        <td class="align-middle text-start"><%= component.multiplexer %></td>
        <td class="align-middle text-start"><%= component.address %></td>
        <td class="align-middle text-start"><%= component.voltage %></td>
        <td class="align-middle text-start"><%= component.power %></td>
        <td class="align-middle text-start"><%= component.temperature %></td>
        <td class="align-middle text-start"><%= component.active %></td>
        <td>
        	<%= link_to 'Edit', edit_admin_component_path(component), class: "btn btn-sm btn-outline-success" %>
          <%= link_to 'Destroy', admin_component_path(component), data: { turbo: :true, "turbo-method": "delete" }, class: "btn btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
