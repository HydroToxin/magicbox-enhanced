<div class="card p-4 mb-3">
	<div class="form-inline">
		<div class="mt-3">
			<%= f.label :enabled, class: 'form-label' %>
			<%= f.check_box :enabled, data: {toggle: "toggle", size: "sm"} %>

			<%= f.label :enabled, class: 'form-label' %>
			<%= f.text_field :name, placeholder: "Condition name...", class: "form-control mx-2" %>
		</div>
	</div>

	<div class="mt-3">
		<h5>Conditions</h5>

		<%= f.fields_for :conditions do |ff| %>
			<%= render "condition_fields", :f => ff %>
		<% end %>

		<%= link_to 'Add condition', new_admin_condition_path, class: "btn btn-sm btn-success mt-2" %>
	</div>

	<hr>

	<div class="mt-3">
		<h5>Operations</h5>

		<%= f.fields_for :operations do |ff| %>
			<%= render "operation_fields", :f => ff %>
		<% end %>

		<%= link_to 'Add operation', new_admin_operation_path, class: "btn btn-sm btn-success mt-2" %>
	</div>
</div>