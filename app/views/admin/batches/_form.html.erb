<%= form_with(model: [:admin, @grow, @harvest, batch], local: true, class: "col-md-12 col-lg-8 mx-auto") do |form| %>
  <h1>
    <%= batch.new_record? ? "New Batch" : "Editing Batch" %>
    <div class="float-end">
      <% if !batch.new_record?  %>
        <%= link_to "Delete", [:admin, @grow, @harvest, batch], method: :delete, class: "btn btn-outline-danger", data: { confirm: 'Are you sure?' } %>
      <% end %>
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  </h1>

  <hr>

  <% if batch.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4><%= pluralize(batch.errors.count, "error") %> prohibited this batch from being saved:</h4>

      <ul>
      <% batch.errors.messages.each do |message| %>
        <li><b><%= message.first.to_s.titleize %></b>: <%= message.last.join(", ") %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= # form.hidden_field :grow_id, value: @grow.id %>
  <%= # form.hidden_field :harvest_id, value: @harvest.id %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :batch_type, class: 'form-label' %>
    <%= form.select :batch_type, options_for_select(Batch.batch_types.keys, form.object.batch_type), {}, class: "form-control" %>
  </div>

  <hr>

  <div class="row">
    <div class="col-6">
      <div class="mb-3">
        <%= form.label :total_weight, class: 'form-label' %>
        <%= form.number_field :total_weight, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :batch_weight, class: 'form-label' %>
        <%= form.number_field :batch_weight, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :batch_count, class: 'form-label' %>
        <%= form.number_field :batch_count, class: "form-control" %>
      </div>
    </div>

    <div class="col-6">
      <div class="mb-3">
        <%= form.label :batch_price, class: 'form-label' %>
        <%= form.number_field :batch_price, step: :any, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :price_per_weight, class: 'form-label' %>
        <%= form.number_field :price_per_weight, step: :any, class: "form-control" %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $("#batch_batch_price").change(function() {
    let batch_price  = parseFloat($("#batch_batch_price").val());
    let batch_weight = parseFloat($("#batch_batch_weight").val());

    if(batch_price && batch_weight) {
      $("#batch_price_per_weight").val((batch_price / batch_weight).toFixed(2));
    }
  });

  $("#batch_price_per_weight").change(function() {
    let batch_weight = parseFloat($("#batch_batch_weight").val());
    let weight_price = parseFloat($("#batch_price_per_weight").val());

    if(batch_weight && weight_price) {
      $("#batch_batch_price").val((batch_weight * weight_price).toFixed(2));
    }
  });

  $("#batch_total_weight, #batch_batch_weight").change(function() {
    let total = parseFloat($("#batch_total_weight").val());
    let weight = parseFloat($("#batch_batch_weight").val());

    if(total && weight) {
      $("#batch_batch_count").val((total / weight).toFixed(2));
    }
  });
</script>
