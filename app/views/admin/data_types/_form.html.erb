<h1>
  <div class="col-md-12 col-lg-8 mx-auto">
    <%= @data_type.new_record? ? "New DataType" : "Editing DataType" %>
    <div class="float-end">
      <% unless @data_type.new_record? %>
        <%= link_to 'Destroy',  [:admin, data_type], data: { turbo: :true, "turbo-method": "delete" }, class: "btn btn-outline-danger" %>
      <% end %>
    </div>
  </div>
</h1>

<%= form_with(model: [:admin, data_type], local: true, class: "col-md-12 col-lg-8 mx-auto") do |form| %>
  <hr>

  <% if @data_type.errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <h4><%= pluralize(@data_type.errors.count, "error") %> prohibited this data_type from being saved:</h4>
      <ul>
      <% @data_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <%= form.submit "Save", class: "btn btn-primary" %>
<% end %>
