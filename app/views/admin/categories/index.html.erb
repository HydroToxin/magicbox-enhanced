<h1>
  Categories
  <div class="float-end">
    <%= link_to new_admin_category_path, class: "btn btn-info d-flex align-items-center" do %>
      <i class="bi-plus my-1 h5" width= "1em" height="1em"></i>
      New
    <% end %>
  </div>
</h1>

<br>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th class="text-center">Nb resources</th>
      <th width="140px"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><b><%= category.name %></b></td>
        <td class="text-center"><%= category.resources.count %></td>
        <td>
        	<%= link_to 'Edit', edit_admin_category_path(category), class: "btn btn-sm btn-outline-success" %>
          <%= button_to 'Destroy', admin_category_path(category), method: :delete, data: { turbo: :false }, class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
