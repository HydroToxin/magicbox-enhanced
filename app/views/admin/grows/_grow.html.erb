<div class="col-12 mb-3">
	<div class="card">
	  <h5 class="card-header">
      <%= link_to "<i class='bi-flower1 h4'></i> #{grow.description}".html_safe, grow %>
	  	<div class="float-end">
	  		<span class="badge <%= grow.status_badge_class %> ms-2"><%= grow.grow_status %></span>
		    <span class="badge bg-info"><%= grow.substrate %></span>
		    <span class="badge bg-secondary"><%= grow.flowering %></span>
	  	</div>
	  </h5>
	  <div class="card-body">
	  	From <b><%= fdate(grow.start_date) %></b> to <b><%= fdate(grow.end_date) %></b>
	    <div class="progress my-2">
	      <div class="progress-bar bg-<%= grow.progress_color %>" role="progressbar" style="width: <%= grow.progress_percents %>%" aria-valuenow="<%= grow.progress_percents %>" aria-valuemin="0" aria-valuemax="100"><%= grow.progress_percents %>%</div>
	    </div>

	    <h5 class="d-inline-flex"><span class="badge bg-success"><%= grow.subjects.count %> subjects</span></h5>

	    <% if grow.current_week %>
	    	<h5 class="d-inline-flex"><span class="badge bg-primary">W<%= grow.current_week.week_number %></span></h5>
	    <% end %>

	    <div class="float-end">
	    	<%= link_to new_grow_observation_path(grow), class: "btn btn-outline-primary d-flex align-items-center" do %>
		      <i class="bi-plus h5"></i> <i class="bi-chat-quote h5"></i>
		    <% end %>
	    </div>
	  </div>
	</div>
</div>
