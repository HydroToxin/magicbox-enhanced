<h1>
  Device Scripts
  <div class="float-end">
    <%= link_to new_admin_device_script_path, class: "btn btn-info d-flex align-items-center" do %>
      <i class="bi-plus my-1 h5" width= "1em" height="1em"></i>
      New
    <% end %>
  </div>
</h1>

<br>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Script Name</th>
      <th>Description</th>
      <th class="text-end">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @device_scripts.each do |device_script| %>
      <tr>
        <td><%= device_script.name %></td>
        <td><%= device_script.script_name %></td>
        <td><%= device_script.description %></td>
        <td class="text-end">
        	<%= link_to 'Edit', edit_admin_device_script_path(device_script), class: "btn btn-sm btn-outline-success" %>
          <%= link_to 'Destroy', admin_device_script_path(device_script), data: { turbo: :true, "turbo-method": "delete" }, class: "btn btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
