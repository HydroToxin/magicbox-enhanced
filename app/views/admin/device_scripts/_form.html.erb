<%= form_with(model: [:admin, @device_script], data: { turbo: false }, local: true, class: "col-md-12 col-lg-8 mx-auto", id: "admin-batches-form") do |form| %>
  <h1>
    <%= @device_script.new_record? ? "New Device Script" : "Editing Device Script" %>
    <div class="float-right">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  </h1>

  <hr>

  <% if @device_script.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4><%= pluralize(device_script.errors.count, "error") %> prohibited this device_script from being saved:</h4>
      <ul>
      <% v.errors.messages.each do |message| %>
        <li><b><%= message.first.to_s.titleize %></b>: <%= message.last.join(", ") %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control col-12 col-md-6" %>
  </div>

  <div class="form-group">
    <%= form.label :script_name %>
    <%= form.text_field :script_name, class: "form-control col-md-8 col-12" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control col-md-8 col-12" %>
  </div>

<% end %>
